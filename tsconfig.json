{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"paths": {
			"$components/*": ["./src/components/*"],
			"$modules/*": ["./src/modules/*"],
			"$config/*": ["./src/config/*"],
			"$content/*": ["./src/content/*"],
			"$services/*": ["./src/services/*"],
			"$styles/*": ["./src/styles/*"],
			"$tokens/*": ["./src/styles/tokens/*"]
		}
	}
}
